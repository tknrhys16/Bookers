
<%= render 'users/users', user: @user, book: @book %>
<div class ="container">
  <div class ="row">
<div class="col-xs-9">
<h2>Books</h2>
  <table class="table">
    <thead>
      <tr>
        <th>     </th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
     <% @books.each do |book| %>
     <tbody>
      <tr>

        <td><div><%= link_to user_path(book.user) do %>
      	<%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></div></td>

        <td><%= link_to book.title, book_path(book.id) %></td><!--投稿記事に対応したbooks/idパス-->
        <td><%= book.body %></td>
     <% end %>
     <% end %>
      </tr>
    </tbody>
  </table>
</div>
</div>
</div>