<%= render 'layouts/notifications' %>

<%= render 'users/users', user: @user, book: @book %>
<div class ="container">
  <div class ="row">
<div class="col-xs-9">
<h2>Users</h2>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
     <% @users.each do |user| %> <!--ひとつひとつをUSERとする-->
      <tr>
      	<td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
        <td><%= user.name %></td>

        <td><%= link_to 'Show', user_path(user.id) %></td> <!--各ユーザーの詳細ページ-->

      </tr>
    <% end %>
    </tbody>
  </table>
</div>
</div>
</div>

