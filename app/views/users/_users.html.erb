  <%#<% end %>
</div>



<!--NEW　BOOK-->
    <h2>New book</h2>
<%= form_for(book) do |f| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= book.errors.count %>件のerrorが発生しました。</h2>
      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field row">
    <label class="book_title">Title</label><br>
      <%= f.text_field :title, class:"col-xs-12 book_title"%>
  </div>

  <div class="field row">
    <label class="book_opinion">Oponion</label><br>
      <%= f.text_area :body, class:"col-xs-12 book_body" %>
  </div>

  <%= f.submit "Create Book", class:"btn btn-primary col-xs" %>

<% end %>
</div>











