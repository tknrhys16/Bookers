<%= render 'layouts/notifications' %>

<%= render 'users/users', user: @user, book: @book %>
<div class ="container">
  <div class ="row">
<div class="col-xs-9">
<table class="table table-hover table-inverse">
  <h2>Books</h2>
  <thead>
  	<tr>
      <th>    </th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 <tbody>
   <% @books.each do |book| %>
      <tr>
       <td><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %> </td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
 </tbody>
</table>
</div>
</div>
</div>